rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /api_keys/{keyId} {
        allow read, update, delete: if request.auth != null && resource.data.uid == request.auth.uid;
        allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }
  
    // By default, no one has access to anything.
    match /{document=**} {
      allow read, write: if false;
    }


    // Rule for the 'users' collection
    // Read-only for the owner.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      // Rule for MCP Keys subcollection
      match /mcp_keys/{keyId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rule for the 'boards' collection
    match /boards/{boardId} {
      // Helper to check if user has access to the board
      function hasAccess() {
        return request.auth != null &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.boardIds.hasAny([boardId]);
      }

      // Helper to check if user is a parent
      function isParent() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isParent == true;
      }

      allow read: if hasAccess();

      allow create: if isParent() && hasAccess();
      
      allow update: if hasAccess() && (
        isParent() || 
        (
          // Child restrictions for Board Document:
          // 1. Cannot change totalToken
          request.resource.data.totalToken == resource.data.totalToken &&
          // 2. Cannot change owner
          request.resource.data.owner == resource.data.owner &&
          // 3. Cannot change label
          request.resource.data.label == resource.data.label
        )
      );

      allow delete: if isParent() && hasAccess();

      // Rule for the 'rewards' subcollection
      match /rewards/{rewardId} {
        allow read: if hasAccess();
        
        allow create: if isParent() && hasAccess();
        
        allow update: if hasAccess() && (
            isParent() ||
            (
                // Child restrictions for Reward Document:
                // Can ONLY update the 'pending' field.
                request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pending'])
            )
        );

        allow delete: if isParent() && hasAccess();
      }
    }
  }
}
